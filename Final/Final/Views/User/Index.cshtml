@model IEnumerable<Final.Models.UserModel>


<h2>Users</h2>
@*<button id="addButton" class="btn btn-primary"><i class="icon-plus"> </i> </button>*@

@if(User.IsInRole("Admin")){
<p>
   @* @Html.ActionLink("Add User", "Create",null, new { @class="btn-primary"})*@
    <a class="btn btn-primary" href="~/User/Create" ><i class="icon-plus"></i> Add user</a>
</p>
}
    
<table class="table tbody table-striped tbody table-hover tbody tr:hover table-bordered">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email
        </th>
        <th>
            Phone Number
        </th>
        <th>
            Name
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.UserID }, new { @class="btn btn-mini"}) |
            @Html.ActionLink("Reset Password", "ResetPassword", new { id=item.UserID }, new { @class="btn btn-mini"}) |
            @Html.ActionLink("Delete", "Delete", new { id=item.UserID }, new { @class="btn btn-mini btn-danger"})
        </td>
    </tr>
}

</table>
