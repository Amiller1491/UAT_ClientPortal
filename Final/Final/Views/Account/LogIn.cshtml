@using (Html.BeginForm()) {
    <div class="well offset3 span5">

    <fieldset class="control-grouperror" style="text-align:center">
        <legend>Log In</legend>
        <span style="color:red"> @Html.ValidationSummary(true)</span>
        

        <div class="editor-label">
            Email
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Email, new { @placeholder = "example@domain.com"})
            <br />
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <div class="editor-label">
            Password
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.Password, new { @placeholder = "Enter password here" })
            <br /> 
            <p style="color:red"> @Html.ValidationMessageFor(model => model.Password) </p>
            
        </div>

        <p>
            <button class="btn btn-success" type="submit"> Log In</button>
            
            @*<button type="submit" value="Log In" > <i class="icon-pencil"></i> LogIn </button>*@
        </p>
    </fieldset>
   </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
